# .env.example for jeetSocial
# Copy this file to .env and edit as needed.
# See README.md and AGENTS.md for full documentation of each variable.

# Flask app entrypoint
FLASK_APP=app
# Flask environment (development/production)
FLASK_ENV=development

# Database connection URI (required)
# For local development (local Postgres):
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jeetsocial
# For Docker Compose (containerized Postgres):
# DATABASE_URL=postgresql://postgres:postgres@db:5432/jeetsocial
# For CI/E2E, use localhost

# Flask secret key (required, set to a secure random value in production)
SECRET_KEY=your-secret-key

# Enable rate limiting (true/false, default: true)
ENABLE_RATE_LIMITING=true

# Enable hate speech moderation filter (true/false, default: true)
ENABLE_MODERATION=true

# Add any additional feature flags below as needed
# ...
